<% layout("/layouts/boilerplate.ejs") %>
  
    
    <div class="row">
      <div class="col-md-8 offset-2">
        <h3>Create a New Listing</h3>
        <form method="POST" action="/listings">
          <div>
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" placeholder="enter title" type="text" class="form-control"/>
          </div>
          <br />
          <div>
            <label for="description" class="form-label">Description</label>
            <textarea
            name="listing[description]"
            class="form-control"
          ></textarea>
          </div>
          <br />
          <div>
            <label for="image" class="form-label">Image</label>
            
            <input
            name="listing[image]"
            placeholder="enter image URL/Link"
            type="text"class="form-control"
          />
    
          </div>
          <br />
          <div>
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" placeholder="enter price" type="number" class="form-control"/>
          </div>
          <br />
          <div>
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" placeholder="enter country" type="text" class="form-control" />
          </div>
          <br />
          <div>
            <label for="location" class="form-label">Location</label>
            <input
            name="listing[location]"
            placeholder="enter location"
            type="text" class="form-control"
          />
          </div>
          <br />
          
          <button class="btn btn-dark">Add</button>
          <br /><br />
        </form>
      </div>
    </div>
  